    <!-- Page Title -->
    <header class="page-header mx-auto col-md-7 my-4">
        <h1 class="page-title fw-bold">Welcome Patient {{name}} ! </h1>
    </header>




    <div style="width: 80%; margin: 0 auto;">
    <div class="row">


       
        <div class="card text-dark my-5 mx-5" style="width: 18rem; height :24rem;" id="rcorners"><br>
            <img class="card-img-top" src="/images/doctor.jpg" alt="Card image cap" style="height: 200px;" >
            <div class="card-body">
              <h5 class="card-title fw-bold"> Search Doctors and Book an Appointment</h5>
              <a href="searchDoctor" class="btn btn-primary">Click Here</a>
            </div>
          </div>

      


       
          <div class="card text-dark my-5 mx-5" style="width: 18rem; height :24rem;" id="rcorners"><br>
            <img class="card-img-top" src="/images/medicalprescription.jpg" alt="Card image cap" style="height: 200px;" >
            <div class="card-body">
              <h5 class="card-title fw-bold">Check Your Medical Prescriptions</h5>
              <form action="/auth/viewPrescription" method="post">
                <button  type="hidden" class="btn btn-primary">Click Here</button>
              </form>
              {{!-- <a href="#" class="btn btn-primary">Click Here</a> --}}
            </div>
          </div>
    

       
          <div class="card text-dark my-5 mx-5" style="width: 18rem; height :24rem;" id="rcorners"><br>
            <img class="card-img-top" src="/images/adherence.jpg" alt="Card image cap" style="height: 200px;" >
            <div class="card-body">
              <h5 class="card-title fw-bold">Check Your Adherence Rate</h5>
              <form action="/auth/adhereResponse" method="post">
                <button  type="hidden" class="btn btn-primary">Click Here</button>
              </form>
              
            </div>
        </div>

      


        <div class="row">
          
           
          <div class="card text-dark my-5 mx-5" style="width: 18rem; height :24rem;" id="rcorners"><br>
            <img class="card-img-top" src="/images/appointments.jpg" alt="Card image cap" style="height: 200px;" >
            <div class="card-body">
              <h5 class="card-title fw-bold">Check your Appointments</h5>
              
            <form action="/auth/viewBookingsPat" method="POST">
              <button class="link btn btn-primary" >Click Here</button>
            </form>


              {{!-- <a href="/viewBookingsPat" class="btn btn-primary">Click Here</a> --}}
            </div>
          </div>
          

         
          <div class="card text-dark my-5 mx-5" style="width: 18rem; height :24rem;" id="rcorners"><br>
            <img class="card-img-top" src="/images/medical.jpg" alt="Card image cap" style="height: 200px;" >
            <div class="card-body">
              <h5 class="card-title fw-bold">Check Medical Reports</h5>
              <a href="#" class="btn btn-primary">Click Here</a>
            </div>
          </div>
         

         
          <div class="card text-dark my-5 mx-5" style="width: 18rem; height :24rem;" id="rcorners"><br>
            <img class="card-img-top" src="/images/operations.jpg" alt="Card image cap" style="height: 200px;" >
            <div class="card-body">
              <h5 class="card-title fw-bold">Check Past Operations History</h5>
              <a href="#" class="btn btn-primary">Click Here</a>
